@page
@model DemoWithRazor.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col">
            <h2 class="text-primary">
            Category List
            </h2>
        </div>
        <div class="col">
            <a asp-page="/categories/create" class="btn btn-primary">
            Create new category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.categories.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="m-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id=@category.Id class="btn btn-primary mx-2">
                            <i class="bi bi-feather"></i> Edit
                        </a>
                        <a asp-page="/categories/delete" asp-route-id=@category.Id class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>            
        }
    </tbody>
</table>