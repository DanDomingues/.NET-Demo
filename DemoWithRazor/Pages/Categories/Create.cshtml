@page
@model DemoWithRazor.Pages.Categories.CreateModel
@{
}


<form method="post">
	<div class="border p-3 mt-4">
@*
*@
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
		</div>
		<div asp-validation-summary="ModelOnly"></div>
		<div class="mb-3 row p-1">
			<label>Category Name</label>
			<input asp-for="category.Name" class="form-control"/>
			<span asp-validation-for="category.Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label>Display Order</label>
			<input asp-for="category.DisplayOrder" class="form-control" />
			<span asp-validation-for="category.DisplayOrder" class="text-danger"></span>
		</div>
		
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/categories/index">Back to List</a>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{
	<partial name="_ValidationScriptsPartial"/>
	}
}