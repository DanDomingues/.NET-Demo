@page
@model DemoWithRazor.Pages.Categories.DeleteModel
@{
}

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
		</div>
		<div asp-validation-summary="ModelOnly"></div>
		<div class="mb-3 row p-1">
			<label>Category Name</label>
			<input asp-for="Category.Name" disabled class="form-control" />
		</div>
		<div class="mb-3 row p-1">
			<label>Display Order</label>
			<input asp-for="Category.DisplayOrder" disabled class="form-control" />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-page="/Categories/Index">Back to List</a>
			</div>
		</div>
	</div>
</form>